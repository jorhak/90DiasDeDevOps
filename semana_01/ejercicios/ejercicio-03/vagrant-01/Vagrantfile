Vagrant.configure("2") do |config|
  # Usa una imagen ligera de Ubuntu 22.04
  config.vm.box = "ubuntu/jammy64"
  
  # Configuraci√≥n de red (accesible via IP)
  config.vm.network "private_network", ip: "192.168.56.32"
  # Cambiar hostname
  config.vm.hostname = "jorhak"  
  # Provisionamiento con Shell
  config.vm.provision "shell", path: "scripts/installNvmNode.sh"
end
